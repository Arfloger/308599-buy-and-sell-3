extends ../layouts/main
include ../utils/mixins

block content
  section.login
    form.login__form.form(action='#' method='post' enctype='multipart/form-data')
      .login__title
        a.login__link(href='sign-up.html') Регистрация
        h2 Вход
      +input({
        extraClass: 'login__field',
        type: 'email',
        id: 'user-email',
        name: 'user-email',
        isRequired: true,
        labelText: 'Эл. почта',
        isError: false,
        errorText: ''
      })
      +input({
        extraClass: 'login__field',
        type: 'password',
        id: 'user-password',
        name: 'user-password',
        isRequired: true,
        labelText: 'Пароль',
        isError: false,
        errorText: ''
      })
      button.login__button.btn.btn--medium.js-button(type='submit' disabled='') Войти
